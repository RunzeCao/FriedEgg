<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.friedegg">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:name=".base.FEApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.SettingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.CommentListActivity"
            android:label="@string/title_activity_comment_list" />
        <activity
            android:name=".activity.ImageDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ImageDetailActivityTheme" />
        <activity
            android:name=".activity.FreshNewsDetailActivity"
            android:label="@string/title_activity_fresh_news_detail" />
        <activity
            android:name=".activity.PushCommentActivity"
            android:label="@string/title_activity_push_comment" />
    </application>

</manifest>